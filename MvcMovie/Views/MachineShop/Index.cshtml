                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cleaning)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Down)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Other)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NonconfParts)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
